import random
def id(): 
    print('', end = '\n')
print("сыграем в 'угадай число!'")
id()
c = int(input("Вводи число не больше 10:"))
id()
c1 = random.randint(0,10)
if c == c1:
    print("ты угадал число.")
    id()
else:
    print("ты не угадал число.")
    с2 = int(input("вторая попытка. Вводи число не больше 10:"))
    id()
    if с2 == c1:
        print("не зря я дал тебе вторую попытку, ты угадал число.")
        id()
    else:
        print("даже вторая попытка не помогла тебе отгадать число.")
        id()
print("игра закончена.")
